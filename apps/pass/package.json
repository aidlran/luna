{
  "name": "luna-pass",
  "version": "2.1.1",
  "private": true,
  "description": "A secure password and secrets management CLI utility using Astrobase",
  "type": "module",
  "bin": "src/cli.mjs",
  "scripts": {
    "build": "conc npm:build:astrobase npm:build:astrobase-legacy",
    "build:astrobase": "npm run build -w ../../lib/astrobase",
    "build:astrobase-legacy": "npm run build -w ../../lib/astrobase-legacy",
    "ci": "npm run build && npm run test",
    "test": "vitest run"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.0.0",
    "@noble/secp256k1": "^2.0.0",
    "better-sqlite3": "^12.2.0",
    "bip32": "^5.0.0-rc.0",
    "commander": "^14.0.1",
    "env-paths": "3.0.0",
    "readline-sync": "1.4.10"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.3",
    "concurrently": "^9.2.0",
    "vitest": "^3.2.3"
  }
}
