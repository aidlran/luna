{
  "name": "luna",
  "version": "0.1.0",
  "private": true,
  "description": "A productivity assistant.",
  "homepage": "https://github.com/aidlran/luna#readme",
  "bugs": "https://github.com/aidlran/luna/issues",
  "repository": "github:aidlran/luna",
  "license": "AGPL-3.0-only",
  "author": "Aidan Loughran",
  "type": "module",
  "workspaces": [
    "lib/astrobase"
  ],
  "scripts": {
    "prebuild": "conc \"npm run build -w lib/astrobase\" \"svelte-kit sync\"",
    "build": "vite build",
    "ci": "npm run build && npm run lint",
    "dev": "vite dev",
    "lc": "echo LUNA: $(find src -type f -exec cat {} \\; | wc -l) lines",
    "preview": "vite preview",
    "start": "svelte-kit sync && conc -k npm:start:*",
    "start:astrobase": "npm start -w lib/astrobase",
    "start:luna:app": "tauri dev",
    "start:luna:check": "svelte-check --watch --preserveWatchOutput"
  },
  "devDependencies": {
    "@astrobase/core": "file:lib/astrobase",
    "@sveltejs/adapter-static": "^3.0.5",
    "@sveltejs/kit": "^2.7.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/cli": "^2",
    "@tauri-apps/plugin-shell": "^2",
    "autoprefixer": "^10.4.20",
    "concurrently": "9.1.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^3.4.9",
    "tslib": "^2.8.0",
    "typescript": "~5.7.2",
    "valibot": "^1.0.0-beta.3",
    "vite": "^6.0.0"
  }
}
